<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/constraint_layout">

    <TextView
            android:layout_width="368dp"
            android:layout_height="25dp"
            android:text="Box One"
            android:gravity="center_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.032"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp" android:layout_marginRight="16dp"
            app:fontFamily="@font/roboto_light_italic"
            android:background="@android:color/white" android:textColor="@android:color/white" android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:inputType="text" android:paddingTop="5dp" android:paddingBottom="5dp" android:id="@+id/box_one"/>
    <TextView
            android:text="Box Two"
            android:layout_width="150sp"
            android:layout_height="150sp"
            android:id="@+id/box_two"
            android:background="@android:color/white" android:textColor="@android:color/white"
            android:textStyle="bold" android:paddingTop="60dp" android:paddingLeft="45dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/box_one" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"/>
    <TextView
            android:text="Box Three"
            android:layout_width="198sp"
            android:layout_height="32sp"
            android:id="@+id/box_three"
            android:background="@android:color/white" android:textColor="@android:color/white"
            android:paddingLeft="13dp" android:paddingTop="4dp" android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/box_four" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/box_two" app:layout_constraintStart_toEndOf="@+id/box_two"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"/>
    <TextView
            android:text="Box Four"
            android:layout_width="198sp"
            android:layout_height="32sp"
            android:id="@+id/box_four"
            android:background="@android:color/white"
            android:paddingLeft="13dp"
            android:paddingTop="4dp"
            android:textColor="@android:color/white" android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/box_three"
            app:layout_constraintBottom_toTopOf="@+id/box_five" app:layout_constraintStart_toEndOf="@+id/box_two"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
    <TextView
            android:text="Box Five"
            android:layout_width="198sp"
            android:layout_height="32sp"
            android:id="@+id/box_five"
            android:background="@android:color/white" android:paddingLeft="13dp" android:paddingTop="4dp"
            android:textColor="@android:color/white" android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/box_two" app:layout_constraintTop_toBottomOf="@+id/box_four"
            android:layout_marginBottom="8dp" app:layout_constraintStart_toEndOf="@+id/box_two"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="30dp" android:id="@+id/button4"
            app:layout_constraintBaseline_toBaselineOf="@+id/button5"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="287dp"
            tools:layout_editor_absoluteX="171dp" android:id="@+id/button5"/>

</android.support.constraint.ConstraintLayout>